<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Insert title here</title>
    <jsp:include page="/WEB-INF/view/common/common_include.jsp"></jsp:include>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function NoticeList() {
            var param = {}; // 필요에 따라 파라미터를 설정할 수 있습니다.

            var callBackFunction = function(data) {
              var list = data.noticeList
              $("#noticeId").val(list.noti_seq);
              $("#noticeTitle").val(list.noti_title);
              $("#noticeDate").val(list.noti_date);
              $("#noticeWriter").val(list.loginID);

            $.ajax({
                url: "/board/noticeList.do",
                type: "post",
                dataType: "json", // JSON 형식으로 데이터를 받아옵니다.
                async: true,
                success: callBackFunction,
                error: function(xhr, status, error) {
                    console.error("AJAX Error:", status, error);
                }
            });
        }
        
        // 페이지 로드 시 NoticeList 함수를 호출하여 데이터를 가져옵니다.
        $(document).ready(function() {
            NoticeList();
        });
        }
    </script>
</head>
<body>
    <h1>공지 사항</h1>
    <div>
        <table border="1">
            <thead>
                <tr>
                    <th>공지 번호</th>
                    <th>공지 제목</th>
                    <th>공지 날짜</th>
                    <th>작성자</th>
                </tr>
            </thead>
            <tbody id="noticeList">
            	<td id="noticeId"></td>
            	<td id="noticeTitle"></td>
            	<td id="noticeDate"></td>
            	<td id="noticeWriter"></td>
            </tbody>
        </table>
    </div>
</body>
</html>
