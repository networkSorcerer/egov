        </select>
    </div>
    <div>
    	<table id="show" class="col">
    		<tr>
    			<td>주문 ID</td>
    			<td>상품 이름</td>
    			<td>상품 수량</td>
    			<td>주문 일자</td>
    		</tr>
    		<tr id="orderDetail">
    			<td><input type="text" id="seq"></td>
    			<td><input type="text" id="product_name"></td>
    			<td><input type="text" id="order_count"></td>
    			<td><input type="text" id="obtain_date"></td>
    		</tr>
    	</table>
    </div>
</div>
