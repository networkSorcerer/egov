<script>
function NoticeList() {
    var param = {}; // 파라미터 객체는 필요에 따라 추가할 수 있습니다. //내가 주는 곳이지 않을까? 

    var callBackFunction = function(response) {
        $("#noticeList").empty(); // empty() 함수는 ()를 붙여야 하며, 세미콜론을 추가해야 합니다.
        $("#noticeList").append(response); // append() 함수로 response를 테이블에 추가합니다.
    };

    $.ajax({
        url: "/system/noticeList1.do",
        type: "post",
        dataType: "json", // dataType을 "text"에서 "html"로 수정합니다.
        async: true, // 비동기로 설정합니다. 기본값이므로 생략 가능합니다.
        success: callBackFunction,
        error: function(xhr, status, error) {
            console.error("AJAX Error:", status, error); // 에러 핸들링을 추가합니다.
        }
    });
}

</script>
</head>
