<script type="text/javascript">
$(document).ready(function() {	
	function noticeSearch(cpage){
		cpage = cpage || 1;
		
		// 페이지 사이즈와 페이지 블록 변수 설정 (필요한 경우 적절한 값을 할당)
		var pageSize = 10; // 예시 값, 실제 값으로 대체 필요
		var pageBlockPage = 5; // 예시 값, 실제 값으로 대체 필요
		
		// 공지사항 데이터 보여주는 로직
		var param = {
				searchTitle : $("#searchTitle").val(),
				searchStDate : $("#searchStDate").val(),
				searchEdDate : $("#searchEdDate").val(),
				currentPage : cpage,
				pageSize : pageSize
		};
		
		var callBackFunction = function(response){
			var noticeList = response.noticeList;
			var html = "<tr>"; // 테이블 행 시작

			noticeList.forEach(function(item){
				html += "<td>"+item.noti_seq+"</td>";
				html += "<td>"+item.noti_title+"</td>";
				html += "<td>"+item.noti_date+"</td>";
				html += "<td>"+item.loginID+"</td>";	
				html += "</tr><tr>"; // 테이블 행 종료 및 새로운 행 시작
			});
			html += "</tr>"; // 마지막 행 종료

			$("#noticeList").html(html);
			
			var pagieNavigateHtml = getPaginationHtml(cpage, $("#totcnt").val(), pageSize, pageBlockPage, "noticeSearch")
			$("#pagingNavi").empty().append(pagieNavigateHtml);
			$("#currentPage").val(cpage);
		}
		
		$.ajax({
			url:"/board/noticeList1.do",
			data: param,
			type:"post",
			dataType:"json",
			success: callBackFunction,
			error: function(jqXHR, textStatus, errorThrown) {
				console.error("Error fetching data: " + textStatus + " - " + errorThrown);
			}
		});
	}

	// 초기 검색 실행
	noticeSearch();

	// 검색 버튼 클릭 시 검색 실행
	$("#searchButton").on("click", function() {
		noticeSearch(1);
	});
});

</script> 

	
			
				
			
